<!DOCTYPE html>
 <html> 
    <head>
        <meta charset="utf-8">
        
        <title>Add Task</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <%- include('../layouts/styles') %>
    </head>
    <body>
        <%- include('../layouts/marquee') %>
        <h1>Add a New Task:  <%= user.username %> </h1>
        <%- include('../layouts/nav') %>
          
 <ul class="crudTaskNav"> |
    <li><a href="/getTasksHomePage">Task List</a></li> |
  </ul>
        <main>
            <section class="flex-containerDetail">
                <section>
                 <form id="addTaskForm" action="/addNewTask" method="post">
                     <fieldset>
                         <legend>Add A Task</legend>
                        
                         <label>Title</label>
                         <input type="text" name="title" required >
                         
                         <label>Category</label>
                         <input type="text" name="category" required > 
                         <label>Contact</label>
                         <input type="text" name="Contact" required > 
                         <label>Status</label>
                         <input type="text" name="status" value="New" required >

                         <label>Description</label>
                         <textarea type="text" name="description"  cols="50" rows="10" required ></textarea>
                        
                        
                        
                        </fieldset>
                        <button type="submit">Add This Task</button>
                 </form>
              </section>
              </section>
              
              
              
             

        </main>
        <%- include('../layouts/footer') %>
        <script src="/js/app.js"></script>
    </body>
</html>